@model PostViewModel

<form asp-controller="Panel" asp-action="Upsert" method="post" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" asp-for="Title" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <input class="form-control" asp-for="Description" />
    </div>
    <div class="form-group">
        <label>Tags</label>
        <input class="form-control" asp-for="Tags" />
    </div>
    <div class="form-group">
        <label>Category</label>
        <select class="form-control" asp-for="Category">
            <option value="Repair">Repairs</option>
            <option value="Tips">Tips</option>
            <option value="Cleaning">Cleaning</option>
            <option value="New">New-Arrival</option>
            <option value="Parts">New-Parts</option>
        </select>
    </div>
    <div class="form-group">
        <label>Body</label>
        <textarea class="form-control" id="editor" asp-for="Body"></textarea>
    </div>
    <div class="form-group">
        <label>Image</label>
        <br />
        <input class="btn btn-primary" asp-for="CurrentImage" type="hidden" />
        <input class="btn btn-outline-info" asp-for="Image" />
    </div>
    <div class="col-md-6 col-lg-4 pt-4">
        <img src="~/content/blog/@Model.CurrentImage"
             width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
    </div>
    <input class="btn btn-primary btn-group-lg" type="submit" value="Submit" />
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
            toolbar_mode: 'floating',
        });

    </script>
}